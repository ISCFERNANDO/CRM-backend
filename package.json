  "main": "index.js",
  "scripts": {
    "start": "node crm-backend/index.js",
    "build": "tsc",
    "dev": "tsc -w & nodemon crm-backend/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "npx git-cz"
  },
  "author": "Luis Fernando Prudencio Cruz",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/connect-timeout": "0.0.34",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-formidable": "^1.0.4",
    "@types/express-validator": "^3.0.0",
    "@types/formidable": "^1.2.1",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-formidable": "^1.2.0",
    "express-validator": "^6.10.0",
    "formidable": "^1.2.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.2",
    "morgan": "^1.10.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "2500"
  },
  "lint-staged": {
    "./**/*.{ts,js,json,scss}": [
      "prettier --write"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  }
}
